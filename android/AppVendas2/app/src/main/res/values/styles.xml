<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.MaterialComponents.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:splitMotionEvents">false</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/MyActionMode</item>
    </style>

    <style name="MyActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="android:statusBarColor">@color/colorPurpleDark</item>
        <item name="background">@color/colorPurple</item>
    </style>

    <!-- Icon only button -->
    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">end</item>
    </style>

    <!-- Popup Menu -->
    <style name="app_vendas_popup_menu_style" parent="Widget.MaterialComponents.PopupMenu">
<!--        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>-->
    </style>

</resources>
