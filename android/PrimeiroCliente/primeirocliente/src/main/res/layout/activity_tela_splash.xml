<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0F504A"
    tools:context=".TelaSplashActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:layout_width="256dp"
        android:layout_height="256dp"
        app:srcCompat="@drawable/logo_tarefa"
        android:contentDescription="@string/app_todo" />

    <TextView
        android:id="@+id/txtNomeApp"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:textColor="#FFC107"
        android:layout_width="wrap_content"
        android:textSize="22sp"
        android:layout_height="wrap_content"
        android:text="@string/app_name_fantasia" />

        <TextView
            android:id="@+id/txtVersionApp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:textColor="#FFC107"
            android:textSize="22sp"
            android:layout_height="wrap_content"
            android:text="@string/versao" />
</androidx.appcompat.widget.LinearLayoutCompat>